external_domain() {
	echo "tomaszklim.pl"
}

internal_domain() {
	echo "internal"
}

ssh_dedicated_key_storage_filename() {
	host=$1
	user=$2
	echo "/etc/local/.ssh/key-$user@$host"
}

gpg_backup_key() {
	echo "backup@tomaszklim.pl"
}

local_backup_directory() {
	echo "/backup"
}

management_public_ip_range() {
	echo "79.173.0.0\/18"
}

primary_admin_account() {
	echo "tomek"
}

notify_phone() {
	echo "603252633"
}

cacti_ssh_target() {
	echo "cacti.biuro:/srv/sites/cacti/external"
}

cacti_ssh_port() {
	echo "22"
}

heartbeat_url() {
	echo "https://serverfarmer.home.pl/heartbeat/"
}

connectivity_check_url() {
	echo "https://serverfarmer.home.pl/connection.php"
}

extension_repositories() {
	echo "https://github.com/serverfarmer"
}

keys_repository() {
	echo "https://github.com/serverfarmer/sf-keys"
}

add_backup_extension() {
	echo "$1.gpg"
}

stream_handler() {
	echo "gpg --encrypt --no-armor --recipient `gpg_backup_key` --batch"
}

backup_history_index() {
	echo "%Y%m%d"
}
